@model IEnumerable<Entity.Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["success"] != null)
{
    <div class="alert alert-success mb-5" id="message" style="text-align:center">@TempData["success"]</div>
}
<h1>Mesajlar</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm btn-block">Görüntüle</a>
                    <a asp-action="DeleteConfirmed" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-block">Sil</a>

                </td>
            </tr>
        }
    </tbody>
</table>
