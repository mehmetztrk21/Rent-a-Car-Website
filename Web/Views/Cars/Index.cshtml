@model IEnumerable<Entity.Car>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["success"] != null)
{
    <div class="alert alert-success mb-5" id="message" style="text-align:center">@TempData["success"]</div>
}
<h1>Araçlar</h1>

<p>
    <a asp-action="Create">Yeni</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th style="width:50px;">
                @Html.DisplayNameFor(model => model.Anasayfa)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.model)
                </td>
                <td>
                    <img src="~/tema/assets/images/@item.image" alt="" style="width:90%;">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Anasayfa)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info btn-block">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger btn-block">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
